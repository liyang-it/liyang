<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liyang.mapper.video.videoShowMapper">
    <resultMap id="BaseResultMap" type="com.liyang.entity.video.videoShow" >
        <result column="id" jdbcType="INTEGER" property="id" />
        <result column="is_show" jdbcType="INTEGER" property="show" />
    </resultMap>
    <select id="selectShow" resultType="java.lang.Integer">
        SELECT is_show FROM video_show
    </select>
    <update id="disableShow">
        update  video_show set is_show = 0
    </update>
    <update id="enableShow">
        update  video_show set is_show = 1
    </update>
</mapper>
